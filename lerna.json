{
  "useWorkspaces": true,
  "version": "0.0.0",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": [
        "**/*.md"
      ],
      "message": "build: release version %v"
    },
    "publish": {
      "message": "chore(release): publish %v",
      "ignoreChanges": [
        ".gitignore",
        "*.log",
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}